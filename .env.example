# ReMap Environment Variables Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to version control - it contains secrets!

# Database Configuration
# These are used by PostgreSQL container and your backend API
DB_NAME=remap_development
DB_USER=remap_user
DB_PASSWORD=your_secure_password_here

# Backend API Configuration
# JWT_SECRET should be a long, random string for security
# You can generate one with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_very_long_random_jwt_secret_here_at_least_64_characters

# API Keys (add these as you integrate external services)
# Example: For maps integration
# GOOGLE_MAPS_API_KEY=your_google_maps_key_here
# MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Development Settings
NODE_ENV=development

# If using Supabase in production later, you might add:
# SUPABASE_URL=your_supabase_project_url
# SUPABASE_ANON_KEY=your_supabase_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# File Upload Configuration (for images/videos)
# MAX_FILE_SIZE=10485760  # 10MB in bytes
# ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,mp4,mov

# Email Configuration (for user verification, password reset, etc.)
# SMTP_HOST=your_smtp_host
# SMTP_PORT=587
# SMTP_USER=your_email_user
# SMTP_PASS=your_email_password